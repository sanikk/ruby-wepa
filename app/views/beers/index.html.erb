<p style="color: green"><%= notice %></p>

<h1>Beers</h1>

<p>Number of beers: <%= @beers.count %></p>

<div id="beers">
  <% @beers.each do |beer| %>
    <div id="<%= dom_id beer %>">
      <p>
        <strong>Name:</strong>
        <%= link_to beer.name, beer %>
      </p>
      <p>
        <strong>Style:</strong>
        <%= beer.style %>
      </p>
      <p>
        <strong>Brewery:</strong>
        <%= link_to beer.brewery.name, beer.brewery %>
      </p>
    </div>
  <% end %>
</div>

<%= link_to "New beer", new_beer_path %>
<%= link_to "Brewery list", breweries_path %>