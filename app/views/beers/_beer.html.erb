<div id="<%= dom_id beer %>">
  <h2>
    <strong>Name:</strong>
    <%= beer.name %>
  </h2>

  <p>
    <strong>Style:</strong>
    <%= beer.style %>
  </p>

  <p>
    <strong>Brewery:</strong>
    <%= link_to beer.brewery.name, beer.brewery %>
  </p>

<% if beer.ratings.empty? %>
 beer has not yet been rated!
<% else %>
<p>Beer has <%= pluralize(beer.ratings.count, "rating") %> with an average of <%= beer.average_rating %></p>
<% end %>

</div>
