<div id="<%= dom_id brewery %>">
  <h2>
    <strong>Name:</strong>
    <%= brewery.name %>
  </h2>

  <p>
    <i>Established in 
    <%= brewery.year %></i>
  </p>
  <p>
    <strong>Number of beers:</strong>
    <%= brewery.beers.count %>
  </p>
  <% brewery.beers.to_a %>
  <p>
    <% brewery.beers.each do |beer| %>
      <%= link_to beer.name, beer %>
    <% end %>
  </p>
</div>
